<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FruitPage"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/greetingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nunito_extra_bold"
        android:text="Letâ€™s Fruitzzz"
        android:textSize="25dp"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/greeting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Keep tracking your healthy consume"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetingName"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/mineral_prog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/greeting2"
        android:background="@drawable/toolbarset"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/min_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extra_bold"
            android:text="Mineral"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/min_title"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Track Your Mineral"
            android:textSize="13dp" />

        <ProgressBar
            android:id="@+id/prog_mineral"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/subtitle"
            android:layout_marginTop="20dp"
            android:progressDrawable="@drawable/custome_progressbar_mineral" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prog_mineral"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="140dp"
                android:fontFamily="@font/nunito_bold"
                android:text="50"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="100"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vitC_prog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/toolbarset"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/mineral_prog"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="35dp">

        <TextView
            android:id="@+id/vit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extra_bold"
            android:text="Vit C"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/vit_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vit_title"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Track Your Vit C"
            android:textSize="13dp" />

        <ProgressBar
            android:id="@+id/prog_vitc"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/vit_subtitle"
            android:layout_marginTop="20dp"
            android:progressDrawable="@drawable/custome_progressbar_vitc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prog_vitc"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="140dp"
                android:fontFamily="@font/nunito_bold"
                android:text="50"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="100"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vitA_prog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/toolbarset"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/vitC_prog"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="35dp">

        <TextView
            android:id="@+id/vitA_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extra_bold"
            android:text="Vit A"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/vitA_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vitA_title"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Track Your Vit A"
            android:textSize="13dp" />

        <ProgressBar
            android:id="@+id/prog_vita"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/vitA_subtitle"
            android:layout_marginTop="20dp"
            android:progressDrawable="@drawable/custom_progress_vita" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prog_vita"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="140dp"
                android:fontFamily="@font/nunito_bold"
                android:text="50"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="100"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_marginTop="25dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vitA_prog"
        app:layout_constraintVertical_bias="0.325"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="52dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp">

            <ImageView
                android:id="@+id/grape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_grape" />

            <ImageView
                android:id="@+id/apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_apple" />

            <ImageView
                android:id="@+id/avocado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_avocado" />

            <ImageView
                android:id="@+id/blueberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_blueberry" />

            <ImageView
                android:id="@+id/dragon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_dragon" />

            <ImageView
                android:id="@+id/kiwi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_kiwi" />

            <ImageView
                android:id="@+id/lemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_lemon" />

            <ImageView
                android:id="@+id/mango"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_mango" />

            <ImageView
                android:id="@+id/mangosteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_mangosteen" />
            <ImageView
                android:id="@+id/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_orange" />

            <ImageView
                android:id="@+id/pineapple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_pineapple" />

            <ImageView
                android:id="@+id/watermelon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_watermelon" />

        </LinearLayout>

    </HorizontalScrollView>

<!--    <ListView-->
<!--        android:id="@+id/recycle_view_fruit"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="20dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/vitA_prog"-->
<!--        tools:layout_editor_absoluteX="20dp" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>