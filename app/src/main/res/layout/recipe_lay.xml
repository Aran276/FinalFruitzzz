<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_marginStart="20dp"
android:layout_width="180dp"
android:layout_height="280dp"
android:layout_marginTop="20dp"
app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_extra_bold"
            android:gravity="center"
            android:text="Salad Fruit"
            android:textSize="20dp"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Lorem Ipsum dolor amet gihan iadoadcmvkvmlmca"
            android:textSize="9dp"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:text="0.0"
            android:textColor="@color/orange"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/calories"
            android:layout_toRightOf="@id/calories"
            android:fontFamily="@font/nunito_bold"
            android:text="kcal"
            android:textColor="@color/orange"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calories"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="25"
            android:textColor="@color/another_grey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calories"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/time"
            android:fontFamily="@font/nunito_bold"
            android:text="min"
            android:textColor="@color/another_grey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/cls"
            android:fontFamily="@font/nunito_bold"
            android:text="~$"
            android:textColor="@color/edit_btn"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/mm"
            android:fontFamily="@font/nunito_bold"
            android:text="40"
            android:textColor="@color/edit_btn"
            android:textSize="13dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>