<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="280dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/cat_back"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/little_title"
            android:fontFamily="@font/nunito_bold"
            android:text="Salad"
            android:textColor="@color/white"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cat_back"
            android:layout_alignBottom="@+id/cat_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Salad"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_extra_bold"
            android:gravity="center"
            android:text="Salad Fruit"
            android:textSize="20dp"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Lorem Ipsum dolor amet gihan"
            android:textSize="9dp"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:text="3.3kcal"
            android:textColor="@color/orange"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calories"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="25 min"
            android:textColor="@color/another_grey"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/btnIntent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@+id/calories" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>